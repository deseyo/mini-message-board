<html>
  <head>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <ul>
      <% for (let i=0; i < messages.length; i++) { %>
          <li>
            <div><%= messages[i].username %></div>
            <div><%= messages[i].message %></div>
            <div><%= messages[i].added %></div>
            <a href="/<%= i + 1 %>">Message details</a>
          </li>
      <% } %>
    </ul>
    <span><a href="/new">New message</a></span>
  </body>
</html>